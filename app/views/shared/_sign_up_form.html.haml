#sign-up
  = form_for User.new do |f|
    .field
      = f.label :username
      = f.text_field :username
    .field
      = f.label :email
      = f.text_field :email    
    .field
      = f.label :password
      = f.password_field :password
    .field
      = f.label :password_confirmation, "Confirmation"
      = f.password_field :password_confirmation
    .actions
      = f.submit "Sign up"